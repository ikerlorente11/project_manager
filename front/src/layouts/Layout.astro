---
import { ClientRouter } from "astro:transitions";

const BASE_URL = import.meta.env.BASE_URL;
const API_BASE_URL = import.meta.env.PUBLIC_API_BASE_URL;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Gestor Clases</title>
		<ClientRouter />
	</head>
	<body data-base-url={BASE_URL} data-api-base-url={API_BASE_URL}>
		<div class="container">
			<slot />
		</div>
	</body>
</html>

<style global>
	@import url("https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");

	:root {
		--color-primary: #191a14;
		--color-secondary: #f6f6f3;

		--color-error: #b70000;
		--background-error: #cb3939;

		--background-input: #f5f5f57a;

		--background-primary: #8a8c78;
		--background-primary-hover: #b1b2a3;
		--background-secondary: #f6f6f3;

		--background-light: #d2d2c8;
		--background-dark: #36382d;
	}

	html,
	body {
		margin: 0;
		display: flex;
		justify-content: center;
		width: 100%;
		height: 100%;
		background: var(--background-secondary);
		color: #0a2414;

		font-family: "Poppins", serif;
		font-weight: 600;
	}

	.container {
		height: 950px;
		width: 450px;
		max-width: 95%;
		max-height: 95%;
		border-radius: 5px;
		margin: auto;
		background: var(--background-light);
		box-shadow: 0px 4px 17px 0px var(--background-primary);
		display: flex;
		flex-direction: column;
	}

	/* width */
	::-webkit-scrollbar {
		width: 10px;
	}

	/* Track */
	::-webkit-scrollbar-track {
		background: transparent;
	}

	/* Handle */
	::-webkit-scrollbar-thumb {
		background: #7e7e7e77;
		border-radius: 15px;
	}

	/* Handle on hover */
	::-webkit-scrollbar-thumb:hover {
		background: #7e7e7eb2;
	}
</style>
